<p id="notice"><%= notice %></p>

<center>
<h1>Upcoming Elections</h1>

<% @elections.each do |election| %>
  <div >
    <%= link_to "#{election.position}", election %>
    <p><strong>Deadline:</strong>
      <%= election.deadline.strftime("%H:%M %F")%>
    </p>
    <p><strong>Voting:</strong>
    <%= election.election_start.strftime("%H:%M %F")%> to <%= election.election_end.strftime("%H:%M %F")%>
    </p>
  </div>
<% end %>
</center>
